{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "./test",
    "./scripts",
    "./contracts/**/*",
    "./typechain-types/**/*",
    "**/*.ts",
    "./decs.d.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
